{
    "manifest_version": 3,
    "name": "A2Z Academy Course Backup",
    "description": "Back-up every course/lesson as JSON with one click.",
    "version": "1.1",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "downloads",
        "scripting"
    ],
    "host_permissions": [
        "https://newapps.a-2z.com/*"
    ],
    "action": {
        "default_title": "Backup Courses",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "sw.js"
    }
}